{
  "name": "commet",
  "version": "0.8.0",
  "description": "Commet CLI - Manage your billing platform from the command line",
  "bin": {
    "commet": "./bin/commet"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "billing",
    "cli",
    "typescript",
    "commet"
  ],
  "author": "Commet Team",
  "license": "MIT",
  "dependencies": {
    "@commet/node": "workspace:*",
    "@inquirer/prompts": "^7.8.6",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "jsonc-parser": "^3.3.1",
    "open": "^10.0.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/commet-labs/commet.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
